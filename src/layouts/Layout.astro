---
import '../styles/global.css';
import Menubar from '../components/Menubar.astro';
import Background from "../components/Background.html";

interface Props {
    title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <base href="/">
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <meta name="generator" content="{Astro.generator}">
    <meta content="Kneelawk's Website" property="og:title">
    <meta content="This site is still under construction but feel free to stop by anyways." property="og:description">
    <meta content="https://kneelawk.com/" property="og:url">
    <meta content="https://kneelawk.com/assets/logo_128.png" property="og:image">
    <meta content="#59b4dc" data-react-helmet="true" name="theme-color">
    <title>{title}</title>
</head>
<body>
<div class="background">
    <Background client:load></Background>
</div>
<div class="content-1">
    <Menubar></Menubar>
    <div class="content-2">
        <main>
            <slot></slot>
        </main>
    </div>
</div>
<footer>
    <div class="content-1 footer-content-1">
        <table class="footer-content-2">
            <tr>
                <td class="first">
                    This site was made with <a href="https://astro.build/" target="_blank" rel="noopener"
                                               title="Astro website">Astro</a>
                    and <a href="https://actix.rs"
                           target="_blank" rel="noopener"
                           title="Actix website">Actix</a>.
                </td>
                <td>
                </td>
            </tr>
            <tr>
                <td class="first">
                    You can check out the source code from this site's <a
                        href="https://github.com/Kneelawk/kneelawk.github.io/" target="_blank" rel="noopener">Github
                    page</a>.
                </td>
                <td>
                    Copyright Â© 2024 Cyan Kneelawk.
                </td>
            </tr>
        </table>
    </div>
</footer>
</body>
</html>
<style>
    html {
        position: relative;
        min-height: 100%;
    }

    body {
        background-color: #282828;
        color: #c8c8c8;
        font-family: monospace;
        margin: 0 0 100px;
    }

    .background {
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 0;
    }

    .content-1 {
        background-color: rgba(60, 60, 60, 0.7);
        backdrop-filter: blur(5px);
        max-width: 960px;
        margin-left: auto;
        margin-right: auto;
        z-index: 1;
    }

    .content-2 {
        padding: 15px;
    }

    footer {
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        overflow: hidden;
    }

    .footer-content-1 {
        height: 100%;
    }

    .footer-content-2 {
        font-size: 7pt;
        padding: 15px;
        margin-left: auto;
        margin-right: auto;
        width: auto;
    }

    td {
        padding-left: 8px;
    }

    td.first {
        padding-left: 0;
        padding-right: 8px;
        text-align: end;
    }
</style>
